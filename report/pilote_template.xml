 <!-- <?xml version="1.0" encoding="utf-8"?> -->
<odoo>
    <data>
        <report
            id="report_pilote"
            model="aeroport.pilote"
            string="Rapport Pilote v"
            report_type="qweb-pdf"
            name="aeroport.report_pilote"
            file="aeroport.report_pilote"
            attachment_use="True"
            attachment="(object.lastname or '') + '.pdf'"
        />
        <template id="report_pilote">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <h2>Rapport Pilote</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Adresse</th>
                                    <th>Email</th>
                                    <th>Salaire</th>
                                    <th>Civilité</th>
                                    <th>Langue</th>
                                    <th>Licence</th>
                                </tr>
                            </thead>
                            <tbody>
                            <tr>
                                    <td><t t-esc="o.lastname"/></td>
                                    <td><t t-esc="o.firstname"/></td>
                                    <td><t t-esc="o.address"/></td>
                                    <td><t t-esc="o.email"/></td>
                                    <td class="text-right"><t t-esc="o.salary"/></td>
                                    <td><t t-esc="o.civility"/></td>
                                    <td><t t-esc="o.language"/></td>
                                    <td><t t-esc="o.licence"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
             <xpath expr="//head" position="inside">
            <link rel="stylesheet" type="text/css" href="/aeroport/static/src/css/report_styles.css"/>
        </xpath>
        </template>
    </data>
</odoo>
