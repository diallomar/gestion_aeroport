<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_aeroport_equipage" model="ir.actions.report">
        <field name="name">Details equipage</field>
        <field name="model">aeroport.equipage</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">aeroport.report_aeroportequipage</field>
        <field name="report_file">aeroport.report_aeroportequipage</field>
        <field name="binding_model_id" ref="model_aeroport_equipage"/>
        <field name="binding_type">report</field>
    </record>



    
    <template id="report_aeroportequipage_document">
        <t t-call="web.external_layout">
            <div class = "page">
                <h3 style = "color:blue" class = "text-center">Les informations du membre d'equipage 
                    <span t-field="o.firstname"/>
                </h3>
                <table class ="table table-sm o_main_table">
                    <tbody>
                         <tr>
                        <td><strong>Civilite:</strong></td>
                        <td><span t-field="o.civility"/></td>
                        </tr>
                        <tr>
                            <td>
                                <strong>
                        Nom:
                    </strong>
                            </td>
                            <td>
                                <span t-field="o.lastname"/>
                            </td>
                        </tr>
                        <tr>
                        <td><strong>Prenom:</strong></td>
                        <td><span t-field="o.firstname"/></td>
                        </tr>
                         <tr>
                        <td><strong>Adresse:</strong></td>
                        <td><span t-field="o.address"/></td>
                        </tr>
                         <tr>
                        <td><strong>Securite Social:</strong></td>
                        <td><span t-field="o.num_social_secur"/></td>
                        </tr>


                    </tbody>
                </table>
            </div>
        </t>
    </template>
    <template id="report_aeroportequipage">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="aeroport.report_aeroportequipage_document">
                    
                </t>
            </t>
        </t>
    </template>


     

</odoo>
